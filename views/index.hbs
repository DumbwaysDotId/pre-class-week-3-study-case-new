{{> header}}

{{#if message}}
    <div class="alert alert-{{message.type}}" role="alert">
        {{message.message}}
    </div>
{{/if}}

{{> navbar}}

<div class="container mt-4">
  {{#if articles}}
  <div class="row main-content">
    <div class="col-4">
        <a href="/article/{{articles.0.id}}">
          <img src="{{articles.0.image}}" class="img-content img-fluid" alt=""/>
        </a>
    </div>
    <div class="col-8">
        <a href="/article/{{articles.0.id}}">
          <div class="text-title-content mb-4">{{articles.0.title}}</div>
          <div class="text-desc-content" id="display-article-content"></div>
        </a>
        <input type="hidden" id="article-content" value="{{articles.0.content}}">
    </div>
  </div>
  <div class="row my-5">
    {{#each articles}}
      <div class="col-3 content-list mb-3">
        <a href="/article/{{this.id}}">
          <img src="{{this.image}}" class="img img-fluid" alt="">
          <div class="title mt-3">
            {{this.title}}
          </div>
        </a>
      </div>
    {{/each}}
  </div>
  {{else}}
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
        <img src="/public/image/noData.svg" alt="" class="img-fluid mt-4">
      </div>
    </div>
  {{/if}}
</div>
<script>
  let articleContent = document.getElementById('article-content').value;
  const displayArticleContent = document.getElementById('display-article-content');

  displayArticleContent.innerHTML = articleContent.split(".")[0];
</script>

